---
import { getAllguestByname } from '../../backend/backend.mjs';

// Récupération des invités
const guests = await getAllguestByname();
---

<section class="w-[375px] mx-auto bg-[#212121] text-white p-6 text-center">
  <h2 class="text-[24px] font-bold uppercase font-[Alegreya SC] mb-4">Nos Invités</h2>

  {guests.length > 0 ? (
    <div class="grid grid-cols-1 gap-6">
      {guests.map(guest => (
        <div key={guest.id} class="bg-[#282828] p-4">
          <img src={guest.photo_inv} class="w-full mb-3">
          <h3 class="text-[20px] font-semibold">{guest.prenom_inv} {guest.nom_inv}</h3>
          <p class="text-[16px] text-gray-300">{guest.role_inv}</p>
        </div>
      ))}
    </div>
  ) : (
    <p class="text-center text-gray-400">Aucun invité disponible.</p>
  )}
</section>
